@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<div class="container">
    <h2 class="text-white">User management</h2>
    <p>
        @*<a class="btn btn-primary" asp-action="AddUser">Add new user</a>*@
        <a class="btn btn-success" anchor-style="primary" asp-action="AddUser">Add new user</a>
    </p>
    <hr />
    @if (!Model.Any())
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-sm-6 mb-3 mt-4">
                    <div class="card text-center card-info">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-sm-6 border-left-0 border-top-o border-bottom-0">
                                    <br />
                                    <i class="fa fa-user-lock mb-5"></i> User ID
                                </div>
                                <div class="col-sm-6 ">@user.Id</div>
                                <div class="col-sm-6">
                                    <br />
                                    <i class="fa fa-envelope-open mb-5"></i> User Email
                                </div>
                                <div class="col-sm-6 mt-4">@user.Name</div>
                                <hr />
                                <hr />
                            </div>
                        </div>


                    </div>
                </div>


            }
        </div>

    }

</div>

<div class="container">
    <h2>Role management</h2>
    @if (!Model.Any())
    {
        <tr><td colspan="3" class="text-center">No roles defined yet. Please create the first role.</td></tr>
    }
    else
    {
        <table class="table table-condensed table-bordered">
            <tr>
                <th>Role ID</th>
                <th>Role name</th>
                <th>#Users</th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Do you really want to delete this role?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    }
    <p>
        <a class="btn btn-primary" asp-action="AddNewRole">Add new role</a>
    </p>
</div>
