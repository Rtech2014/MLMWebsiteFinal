@model MLMWebsite.Controllers.LoginViewModel

<br /><br />
<div class="container">
    <h1 class="text-dark">Login Here</h1>
    <div class="row">
        <div class="col-md-7">
            <div class="panel panel-primary">
                <section>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="col-md-2 text-dark"></label>
                            <div class="col-md-12">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label text-dark"></label>
                            <div class="col-md-12">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <label asp-for="RememberMe" class="text-dark">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <a asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot your password?</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary btn-block">Log in</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
        <div class="col-md-4">
            <img src="https://cdn2.iconfinder.com/data/icons/computer-hardware-pack/128/PASSWORD-512.png" style="width: 100%" alt="Login" />
        </div>
    </div>
</div>
