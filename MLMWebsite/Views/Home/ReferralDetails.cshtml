@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using MLMWebsite.Data
@model IEnumerable<ApplicationUser>
<div class="container bg-light p-5">
    @*<h2 class="text-dark">User Management</h2>
        <p>
            <a class="btn btn-success" anchor-style="primary" asp-action="AddUser">Add new user</a>
        </p>*@
    <hr />
    @if (!Model.Any())
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        <h2 class="text-dark">Upline Account Details</h2>
        <div class="row">
            @foreach (ApplicationUser user in Model)
            {
                <div class="col-sm-6 mb-3 mt-4">
                    <div class="card text-center card-info">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-sm-6">
                                    <br />
                                    <i class="fa fa-envelope-open mb-5"></i> User Email
                                </div>
                                <div class="col-sm-6 mt-4">@user.Email</div>
                                <hr />
                                <div class="col-sm-6">
                                    <br />
                                    @*<i class="fab fa-mailchimp"></i>*@
                                    <i class="fab fa-mailchimp mb-5"></i> User Name
                                </div>
                                <div class="col-sm-6 mt-4">@user.UserName</div>
                                <div class="col-sm-6">
                                    <br />
                                    @*<i class="fab fa-mailchimp"></i>*@
                                    <i class="fab fa-mailchimp mb-5"></i> Account Number
                                </div>
                                <div class="col-sm-6 mt-4">@user.AccountNo</div>
                                <div class="col-sm-6">
                                    <br />
                                    @*<i class="fab fa-mailchimp"></i>*@
                                    <i class="fab fa-mailchimp mb-5"></i>IFSC Code
                                </div>
                                <div class="col-sm-6 mt-4">@user.IFSC_Code</div>
                                <hr />
                            </div>
                        </div>
                       
                        <div class="row p-2 no-gutters">
                            @if (User.IsInRole("SuperAdmin"))
                            {

                                <div class="col-6">
                                    <div class="card card-block text-info rounded-0 border-left-0 border-top-o border-bottom-0">
                                        @* localhost/Admin/Edit/ *@
                                        <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                                    </div>
                                </div>
                            }
                                <div class="col-6">
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                        @if (User.IsInRole("SuperAdmin"))
                                        {

                                            <div class="card card-block text-info rounded-0 border-left-0  border-top-o border-bottom-0">
                                                <button type="submit" onclick="return confirm('Do you really want to delete this user?');" class="btn btn-sm btn-danger">
                                                    Block
                                                </button>
                                            </div>

                                        }

                                    </form>

                                </div>

                            </div>
                        </div>
                </div>


            }
        </div>

    }

</div>
